<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/search_edit_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/search_location"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/search_location_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_string"
                android:textColor="@color/white"/>

            <android.support.v7.widget.LinearLayoutCompat
                android:gravity="left"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/search_location_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location_string"
                    android:textColor="@color/white"/>

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/search_location_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_close_dark" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_destination"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/search_destination_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/destination_string"
                android:textColor="@color/white" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:orientation="horizontal" >
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/search_destination_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="@string/destination_string" />
                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/search_destination_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_close_dark" />
                </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.SearchView
            android:id="@+id/navigation_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:icon="@android:drawable/ic_menu_search" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.Toolbar>
